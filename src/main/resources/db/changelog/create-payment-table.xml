<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-payment-table" author="mkrivoshchapov">
        <createTable tableName="payments">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(64)">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="VARCHAR(1024)">
                <constraints nullable="true"/>
            </column>
            <column name="tariff_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="amount" type="DECIMAL(15,2)">
                <constraints nullable="true"/>
            </column>
            <column name="income_amount" type="DECIMAL(15,2)">
                <constraints nullable="true"/>
            </column>
            <column name="payment_method_type" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>